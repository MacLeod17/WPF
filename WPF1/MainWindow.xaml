<Window x:Class="WPF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF1"
        mc:Ignorable="d"
        Title="Kilpack" Height="600" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel x:Name="pnlMain">
            <TextBlock Text="Hello World!" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60"/>
            <Button x:Name="btn1" Width="150" Height="150" FontSize="30" Click="btn1_Click">
                <Button.Content>
                    <Image Source="Resources\sus.bmp"/>
                </Button.Content>
            </Button>
            <CheckBox x:Name="cbxEnable" Content="Enable" Height="20" Width="180" Click="cbxEnable_Click"/>
        </StackPanel>
    </Grid>
</Window>
